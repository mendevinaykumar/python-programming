row=int(input("enter the size:"))
c=int(input("enter the size:"))
matrix=[]
for i in range(row):
    row=[]
    for j in range(c):
        n=int(input(f"enter the element in matrix{[i]}{[j]}:"))
        row.append(n)
    matrix.append(row)
enter the element in matrix[1][0]:
print(matrix)


